##############################################
CC := gcc
CFLAGS := -Wall -Werror
##############################################
NAME=library
SRC=	main.c
OBJ=$(SRC:%.c=%.o)
##############################################

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $^ -o $(NAME)

%.o: %.c
	@$(CC) $(CFLAGS) -c $<

##############################################
run: re
	@./library best_fit data.db
##############################################

clean:
	@rm -rf $(OBJ)

fclean: clean
	@rm -rf $(NAME)

re: fclean $(NAME)

##############################################